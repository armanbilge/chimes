<div class="container" style="width: 100%">

  <h1>My Conferences</h1>

	<% if current_user.conferences.count > 0 %>
	  <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>
	    <% current_user.conferences.sort_by { |c| c.name }.each do |conference| %>
	      <tr>
	        <td style="width: 67%"><%= conference.name %></td>
	        <td style="width: 33%; text-align: right"><%= link_to 'Manage', conference %></td>
	      </tr>
	    <% end %>
	  </table>
    <br/>
	<% end %>

  <div class="panel panel-default" style="width: 50%; float: none; margin-left: auto; margin-right: auto">
    <div class="panel-heading">New Conference</div>
    <div class="panel-body">
      <%= form_for @conference, validate: true, html: {class: 'form-horizontal'} do |f| %>
      <fieldset>
        <%= f.text_field :name, placeholder: ' conference name', style: 'width: 75%' %>
        <%= f.submit 'Create', class: 'btn btn-primary' %>
      </fieldset>
      <% end %>
    </div>
  </div>

</div>

<% content_for :head do -%>
  <script type="text/javascript">
    self.setInterval(function() {
        $('#chime')[0].currentTime = 0;
        $('#chime')[0].play();
    }, 5000)
  </script>
<% end -%>

<audio id="start-chime" preload>
	<source src="/japanese-temple-bell.mp3" type="audio/mpeg"/>
  <source src="/japanese-temple-bell.ogg" type="audio/ogg"/>
</audio>

<h1>Test</h1>
<p>If this is working, you should hear a chime every five seconds!</p>

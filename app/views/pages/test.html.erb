<% content_for :head do -%>
  <script type="text/javascript">
    self.setInterval(function() {
        if (navigator.userAgent.indexOf("Safari") > -1)
            $('#chime')[0].load();
        $('#chime')[0].currentTime = 0;
        $('#chime')[0].play();
    }, 5000)
  </script>
<% end -%>

<audio id="chime" preload="true">
	<source src="<%= asset_path('japanese-temple-bell.mp3') %>" type="audio/mpeg"/>
</audio>

<h1>Test</h1>
<p>If this is working, you should hear a chime every five seconds!</p>
